# App Configuration
NEXT_PUBLIC_APP_URL=https://gliter.com.ar

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# App Check
# Set to 'true' to disable App Check entirely (not recommended except local dev)
NEXT_PUBLIC_DISABLE_APP_CHECK=
# Public reCAPTCHA v3 site key for App Check
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
# Optional App Check debug token for local development only. DO NOT use in production.
NEXT_PUBLIC_APPCHECK_DEBUG_TOKEN=

# Optional: Firebase Admin SDK (for server-side operations)
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=your_service_account_email
FIREBASE_ADMIN_PRIVATE_KEY=your_private_key